@using wellbeing.Components.API.Survey
@model List<Question>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>User, here's how you're trending.</p>   
</div>
<div class="score-container box-shadow">
    <div class="score-container-text">
        <h5>Metric name</h5>
        <h3>45</h3>
        <p>View progress</p>
    </div>
</div>


@foreach (Question q in Model)
{
    <div class="d-flex question-container">
        @q.QuestionText
        @for(int i = 1; i <= 5;i++)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input question-input-option" type="radio" name="@q.QuestionId" id="@(i)-@(q.QuestionId)"  value="@i" data-question-id="@q.QuestionId">
                <label class="form-check-label" for="@(i)-@(q.QuestionId)" >@i</label>
            </div>
        }
    </div>
}

@section Scripts
{
    <script src="/js/survey_response.min.js" asp-append-version="true"></script>
}