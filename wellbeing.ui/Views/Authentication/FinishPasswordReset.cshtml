@using wellbeing.Models.UI.Page.Authentication
@model FinishPasswordResetPageModel
@{
    ViewBag.Title = "Set a new Password";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">
            <h2 class="mt-4">Please Set Your New Password</h2>

            <div class='row m-0'>
                @await Html.PartialAsync("~/Views/Shared/_Errors.cshtml", Model)
                @await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml", Model)
            </div>

            <form asp-controller="Authentication" asp-action="FinishPasswordReset" method="post" class="mt-3">

                <div class="row">
                    <div class="col-12 col-md-6 mt-3 form-group">
                        <label asp-for="Password">New Password</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 col-md-6 mt-3 form-group mt-3">
                        <label asp-for="ConfirmPassword">Confirm Your Password</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 d-flex align-items-center justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary mt-3">Set New Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
