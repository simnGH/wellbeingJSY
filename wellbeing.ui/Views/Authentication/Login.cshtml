@using wellbeing.Models.UI.Page.Authentication
@model LoginPageModel
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">
            <h2 class="mt-4">Please Log In</h2>

            <form asp-action="Login" asp-controller="Authentication" asp-method="Post" class="mt-3">
                <div class="form-group">
                    <label asp-for="EmailAddress">Email Address</label>
                    <input type="email" asp-for="EmailAddress" class="form-control mb-3" />
                    @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control mb-3" />
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-12 col-sm-5 col-md-6 d-flex align-items-center justify-content-center justify-content-sm-start text-sm-start small mt-3 mt-sm-0">
                        <a asp-controller="Authentication" asp-action="StartPasswordReset" class="btn btn-link ps-0">Forgotten your password?</a>
                    </div>

                    <div class="col-12 col-sm-7 col-md-6 d-flex align-items-center justify-content-center justify-content-sm-end">
                        <a asp-controller="Authentication" asp-action="Register" class="btn btn-outline-dark mt-1 me-3">Create Account</a>
                        <button type="submit" class="btn btn-primary mt-1">Sign In</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
